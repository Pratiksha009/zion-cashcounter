@model IEnumerable<DtdcCashCounter.EntityFr.Sector>

@{
    ViewBag.Title = "Add_SectorPin";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="content-wrapper">
    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }

    @using (Html.BeginForm("Add_SectorPin", "Admin"))
    {

        <section class="content">
            <div class="col-sm-12 no-padding">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Add Sector</h3>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-horizontal">
                                <div class="box-body">
                                    <table class="table">
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Sector_Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Pincode_values)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Franchisee.PF_Code)
                                            </th>
                                            <th></th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>

                                                <td>
                                                    <label>@Html.DisplayFor(modelItem => item.Sector_Name)</label>
                                                </td>
                                                <td>
                                                    <label>@Html.EditorFor(modelItem => item.Pincode_values)</label>
                                                </td>
                                                <td>
                                                    <label>@Html.DisplayFor(modelItem => item.Franchisee.PF_Code)</label>
                                                </td>
                                                <td>
                                                    <label>@Html.HiddenFor(modelItem => item.Sector_Id)</label>
                                                </td>

                                            </tr>
                                        }

                                    </table>
                                    <input type="hidden" name="pfcode" value="@ViewBag.pfcode" />
                                    @Html.ValidationMessage("PinError")
                                    <input type="submit" value="Save" class="btn btn-info btn-sm" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
</div>

<style>
    .content table td label input {
        width: 250px;
    }
</style>

@if (TempData["Success1"] != null)
{
    <script>

        $(document).ready(function () {

            alert('Franchisee Added Success fully Please Fill Ratemater');

        });

    </script>

}
