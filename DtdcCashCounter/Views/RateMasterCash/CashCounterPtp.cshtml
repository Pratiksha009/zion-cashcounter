
@model IEnumerable<DtdcCashCounter.EntityFr.Dtdc_Ptp>


@using (Ajax.BeginForm("CashCounterPtp", "RateMasterCash", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "frmEmp4",OnBegin = "onBegin", OnComplete = "onComplete" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col-sm-12 text-center">
        <h4>PTP</h4>
    </div>

    <table class="table table-bordered table-striped" id="dtdc_ptp">
        <thead>
            <tr class="upto-input">
                <th>
                    @*<h4>@Html.DisplayNameFor(model => model.dest)</h4>*@
                </th>
                <th>
                    <label>Upto 500gm</label>
                </th>
                <th>
                    <label>Add 500gm</label>
                </th>
                <th>
                    <label>10 To 25kg</label>
                </th>
                <th>
                    <label>25 To 50kg </label>
                </th>
                <th>
                    <label>50 To 100kg</label>
                </th>
                <th>
                    <label>Add 100kg</label>
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="sectors">
                        @Html.DisplayFor(modelItem => item.dest)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.PUpto500gm)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.PAdd500gm)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.PU10to25kg)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.PU25to50)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.PU50to100)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.Padd100kg)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="col-sm-12 text-center">
        <h4>PTP 2</h4>
    </div>

    <table class="table table-bordered table-striped" id="dtdc_ptp">
        <thead>
            <tr class="upto-input">
                <th>
                    @*<h4>@Html.DisplayNameFor(model => model.dest)</h4>*@
                </th>
                <th>
                    <label>Upto 500gm</label>
                </th>
                <th>
                    <label>Add 500gm</label>
                </th>
                <th>
                    <label>10 To25kg</label>
                </th>
                <th>
                    <label>25 To 50kg</label>
                </th>
                <th>
                    <label>50 To 100kg</label>
                </th>
                <th>
                    <label>Add 100kg</label>
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="sectors">
                        @Html.DisplayFor(modelItem => item.dest)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.P2Upto500gm)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.P2Add500gm)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.P2U10to25kg)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.P2U25to50)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.P2U50to100)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.P2add100kg)
                    </td>
                    <td class="hidden">
                        @Html.HiddenFor(modelItem => item.Company_id)
                    </td>
                    <td class="hidden">
                        @Html.HiddenFor(modelItem => item.ptp_id)
                    </td>

                </tr>
            }
        </tbody>
    </table>


    <input class="btn btn-success pull-right" type="submit" name="submit" value="Save" />
}

@if (ViewBag.Message != null)
{
    <script>

$(document).ready(function(){

alert('@ViewBag.Message');

});

    </script>

}
<script type="text/javascript">
    function onBegin() {

        // Show the loader
        document.getElementById('overlayBlock').style.display = 'block';
    }

    function onComplete() {
        // Hide the loader
        document.getElementById('overlayBlock').style.display = 'none';
    }
</script>

