<script>
    $(document).ready(function () {


        var test =@ViewBag.NonDox[0].NoOfSlabN;

      //  alert(test);

        if (test == 3) {


            $('.slab2AirNon').show();

            $('.slab3AirNon').hide();


            $('#only').val(test);
        }
        else if (test == 4) {
            $('.slab2AirNon').show();
            $('.slab3AirNon').show();



            $('#only').val(test);
        }
        else if (test == 2) {
            $('.slab2AirNon').hide();
            $('.slab3AirNon').hide();



            $('#only').val(2);

        }





        $("input[name$='NoOfSlabN']").change(function () {

