                    </div>
                    <div class="col-sm-4">
                        <label> @Html.RadioButtonFor(m => item.NoOfSlabS, 3)  Slab 3</label>
                    </div>
                    <div class="col-sm-4">
                        <label> @Html.RadioButtonFor(m => item.NoOfSlabS, 4)  Slab 4</label>
                    </div>
                </div>
            </div>
