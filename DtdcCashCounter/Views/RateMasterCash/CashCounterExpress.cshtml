
@model IEnumerable<DtdcCashCounter.EntityFr.express_cargo>


@using (Ajax.BeginForm("CashCounterExpress", "RateMasterCash", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "frmEmp5", OnBegin = "onBegin", OnComplete = "onComplete" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table class="table table-bordered table-striped" id="express_cargo">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Sector.Sector_Name)*@
            </th>

            <th>
                @*@Html.DisplayNameFor(model => model.Exslab1)*@
                Slab 1
            </th>

            <th>
                @*@Html.DisplayNameFor(model => model.Exslab2)*@
                Slab 2
            </th>

            @*<th>
                    @Html.DisplayNameFor(model => model.Company.Company_Id)
                </th>*@
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="sectors">
                    @Html.DisplayFor(modelItem => item.Sector.Sector_Name)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.Exslab1)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.Exslab2)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Company.Company_Id)
                    </td>*@
                <td class="hidden">
                    @Html.HiddenFor(modelItem => item.Sector_Id)
                </td>
                <td class="hidden">
                    @Html.HiddenFor(modelItem => item.Exp_Id)
                </td>
            </tr>
        }

    </table>
    <input class="btn btn-success pull-right" type="submit" name="submit" value="Save" />
}

@if (ViewBag.Message != null)
{
    <script>

$(document).ready(function(){

alert('@ViewBag.Message');

});

    </script>

}

<script type="text/javascript">
    function onBegin() {

        // Show the loader
        document.getElementById('overlayBlock').style.display = 'block';
    }

    function onComplete() {
        // Hide the loader
        document.getElementById('overlayBlock').style.display = 'none';
    }
</script>